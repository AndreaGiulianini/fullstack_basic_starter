{
  "compilerOptions": {
    "target": "ESNext",
    "module": "ESNext",
    "moduleResolution": "Node",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "outDir": "./dist",
    "baseUrl": ".",
    "paths": {
      "@/*": ["./*"],
      "@constants/*": ["constants/*"],
      "@controllers/*": ["controllers/*"],
      "@errors/*": ["errors/*"],
      "@middleware/*": ["middleware/*"],
      "@models/*": ["models/*"],
      "@routes/*": ["routes/*"],
      "@schemas/*": ["schemas/*"],
      "@types/*": ["types/*"],
      "@utils/*": ["utils/*"]
    }
  },
  "watchOptions": {
    "watchFile": "dynamicPriorityPolling"
  },
  "include": ["**/*.ts", "app.ts"],
  "exclude": ["node_modules"]
}
