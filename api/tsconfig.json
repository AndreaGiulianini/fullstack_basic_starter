{
  "compilerOptions": {
    "target": "ESNext",
    "module": "ESNext",
    "moduleResolution": "Node",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "outDir": "./dist",
    "baseUrl": ".",
    "paths": {
      "@models/*": ["models/*"]
    }
  },
  "watchOptions": {
    "watchFile": "dynamicPriorityPolling"
  },
  "include": ["**/*.ts", "app.ts"],
  "exclude": ["node_modules"]
}
