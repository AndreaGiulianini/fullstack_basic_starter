{
  "$schema": "https://biomejs.dev/schemas/1.9.4/schema.json",
  "vcs": {
    "enabled": false,
    "clientKind": "git",
    "useIgnoreFile": false
  },
  "files": {
    "ignore": [".next/*", "node_modules/*", "./public/img/brand/g_files/*"]
  },
  "organizeImports": {
    "enabled": true,
    "include": ["./*.js", "./*.jsx", "./*.ts", "./*.tsx"],
    "ignore": [".next/*", "node_modules/*", "./public/img/brand/g_files/*"]
  },
  "linter": {
    "enabled": true,
    "rules": {
      "recommended": true,
      "nursery": {
        "useSortedClasses": "warn"
      },
      "a11y": {
        "useKeyWithClickEvents": "off"
      },
      "correctness": {
        "noUndeclaredVariables": "warn",
        "noUnusedImports": "warn",
        "noUnreachable": "warn",
        "noUnusedVariables": "warn",
        "useArrayLiterals": "warn"
      },
      "complexity": {
        "noExcessiveCognitiveComplexity": "warn"
      }
    }
  },
  "formatter": {
    "enabled": true,
    "indentStyle": "space",
    "indentWidth": 2,
    "lineEnding": "lf",
    "lineWidth": 120
  },
  "javascript": {
    "formatter": {
      "indentStyle": "space",
      "indentWidth": 2,
      "lineWidth": 120,
      "semicolons": "asNeeded",
      "quoteStyle": "single",
      "jsxQuoteStyle": "single",
      "trailingCommas": "none"
    }
  }
}
